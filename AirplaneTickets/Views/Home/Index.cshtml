@{
    ViewData["Title"] = "Welcome";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        .center-text {
            text-align: center;
            margin-top: 50px;
        }

            .center-text h1 {
                font-size: 4em; /* Increased font size for Welcome */
            }

            .center-text p {
                font-size: 1.2em;
                margin-top: 20px;
            }

            .center-text .btn {
                font-size: 1.2em;
                padding: 10px 20px;
                margin-top: 30px;
            }
    </style>
</head>
<body>
    <div class="center-text">
        <h1>Welcome</h1>
        <p>Welcome aboard Plane & Simple Airways! We make your air-plane journey simple!</p>
        <form asp-controller="Flight" asp-action="SearchFlights" method="get">
            <button type="submit" class="btn btn-primary">Search Flights</button>
        </form>
    </div>
</body>
</html>